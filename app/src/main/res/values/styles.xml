<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#D32F2F</item>
        <item name="colorAccent">#FF5252</item>
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#727272</item>
        <item name="android:textColor">#212121</item>
    </style>
    <style name="TableStyle">

        <item name="android:textSize">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">tableSelect</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/tableempty</item>
        <item name="android:layout_weight">.5</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="TableSpace">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="Tablespaceleftright">
        <item name="android:layout_weight">2.2</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="Tabletop">
        <item name="android:textSize">10dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="topimage">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="bottombutton">
        <item name="android:textSize">13dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
